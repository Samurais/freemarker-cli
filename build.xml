<?xml version="1.0"?>
<project name="freemarker-cli" basedir=".">

    <!-- =================================================================== -->
    <!-- General Tasks                                                       -->
    <!-- =================================================================== -->

    <target name="clean" description="Clean the working directory">
        <delete dir="./target" />
    </target>

    <target name="package" description="Creates a compressed distributable">
        <tar basedir="${basedir}" destfile="${basedir}/target/freemarker-cli.tar" excludes="target,site/**,.idea/**,LICENSE,build.xml" />
        <gzip destfile="${basedir}/target/freemarker-cli.tar.gz" src="${basedir}/target/freemarker-cli.tar" />
    </target>

</project>
